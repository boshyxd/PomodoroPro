{
  "manifest_version": 3,
  "name": "PomodoroPro",
  "version": "1.0.0",
  "description": "Implement the Pomodoro Technique for improved productivity",
  "icons": {
    "48": "assets/icons/icon48.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icons/icon48.png"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/sounds/notification.mp3"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
